<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/finished_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your progress"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/overall_pb"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/manga_pb"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finished_tv"
            app:progress_blur_style="outer"
            app:progress_shader="sweep"
            app:progress_stroke_width="10dp"
            app:progress_style="solid_line"
            app:progress_text_color="@color/colorAccent"
            app:progress_text_size="18sp" />

        <TextView
            android:id="@+id/overall_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Overall"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/overall_pb"
            app:layout_constraintStart_toStartOf="@id/overall_pb"
            app:layout_constraintTop_toBottomOf="@id/overall_pb" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/manga_pb"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/anime_pb"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/overall_pb"
            app:layout_constraintTop_toBottomOf="@id/finished_tv"
            app:progress_blur_style="outer"
            app:progress_shader="sweep"
            app:progress_stroke_width="10dp"
            app:progress_style="solid_line"
            app:progress_text_color="@color/colorAccent"
            app:progress_text_size="18sp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/manga_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manga"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/manga_pb"
            app:layout_constraintStart_toStartOf="@id/manga_pb"
            app:layout_constraintTop_toBottomOf="@id/manga_pb" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/anime_pb"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/manga_pb"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/finished_tv"
            app:progress_blur_style="outer"
            app:progress_shader="sweep"
            app:progress_stroke_width="10dp"
            app:progress_style="solid_line"
            app:progress_text_color="@color/colorAccent"
            app:progress_text_size="18sp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/anime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Anime"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/anime_pb"
            app:layout_constraintStart_toStartOf="@id/anime_pb"
            app:layout_constraintTop_toBottomOf="@id/anime_pb" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>