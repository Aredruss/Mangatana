<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <Button
        android:id="@+id/in_progress_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fr_in_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/up_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fr_backlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_progress_btn" />

    <Button
        android:id="@+id/finished_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fr_finished"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/up_next_btn" />

    <Button
        android:id="@+id/starred_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/fr_starred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/finished_btn" />

    <Button
        android:id="@+id/explore_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fr_explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starred_btn" />

    <TextView
        android:id="@+id/debug_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Debug menu"
        app:layout_constraintStart_toStartOf="@id/explore_btn"
        app:layout_constraintTop_toBottomOf="@id/explore_btn" />

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR ALL"
        app:layout_constraintStart_toStartOf="@id/debug_menu_tv"
        app:layout_constraintTop_toBottomOf="@id/debug_menu_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>